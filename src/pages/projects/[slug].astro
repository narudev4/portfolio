---
import { getCollection } from "astro:content";
import FrameLayout from "../../layouts/FrameLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects", ({ data }) => {
    return data.draft !== true;
  });

  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('ja-JP', {
    year: 'numeric',
    month: 'long',
  }).format(date);
};
---

<FrameLayout title={project.data.title}>
  <article class="project-detail">
    <header class="article-header">
      <div class="section-header">
        <span class="section-number">04</span>
        <p class="label">Project</p>
      </div>
      <h1>{project.data.title}</h1>
      <p class="summary">{project.data.summary}</p>
      <div class="meta">
        <div class="meta-item">
          <span class="meta-label">Date</span>
          <time datetime={project.data.date.toISOString()}>
            {formatDate(project.data.date)}
          </time>
        </div>
        <div class="meta-item">
          <span class="meta-label">Stack</span>
          <ul class="tags">
            {project.data.tags.map((tag) => (
              <li class="tag">{tag}</li>
            ))}
          </ul>
        </div>
      </div>
    </header>

    <div class="content">
      <Content />
    </div>

    <footer class="article-footer">
      <a href="/projects" class="back-link">← プロジェクト一覧へ戻る</a>
    </footer>
  </article>
</FrameLayout>

<style>
  .project-detail {
    padding: var(--space-xl) var(--page-padding);
    max-width: 600px;
    margin: 0 auto;
  }

  .article-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }

  .section-header {
    position: relative;
    display: inline-block;
    margin-bottom: var(--space-md);
  }

  .section-number {
    position: absolute;
    top: -1rem;
    right: -2.5rem;
    font-family: var(--font-label);
    font-size: 0.625rem;
    font-weight: 500;
    color: var(--color-border);
    letter-spacing: 0.1em;
  }

  .label {
    font-family: var(--font-label);
    font-size: 0.5625rem;
    font-weight: 500;
    color: var(--color-accent);
    letter-spacing: 0.4em;
    text-transform: uppercase;
  }

  h1 {
    margin-bottom: var(--space-md);
  }

  .summary {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: var(--space-lg);
  }

  .meta {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-xl);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .meta-label {
    font-family: var(--font-label);
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .meta time {
    font-size: 1rem;
    color: var(--color-text);
  }

  .tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    font-family: var(--font-label);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
    padding: 4px 10px;
    background: var(--color-bg-subtle);
    border-radius: 2px;
  }

  /* Content typography */
  .content {
    line-height: 1.9;
    margin-bottom: var(--space-xl);
  }

  .content :global(h2) {
    font-size: 1.5rem;
    margin: var(--space-xl) 0 var(--space-md) 0;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .content :global(h2:first-child) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  .content :global(h3) {
    font-size: 1.25rem;
    margin: var(--space-lg) 0 var(--space-sm) 0;
  }

  .content :global(p) {
    margin: 0 0 var(--space-md) 0;
    color: var(--color-text);
    font-size: 1rem;
  }

  .content :global(ul),
  .content :global(ol) {
    padding-left: var(--space-md);
    margin: 0 0 var(--space-md) 0;
  }

  .content :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.8;
    font-size: 1rem;
  }

  .content :global(code) {
    font-family: "SF Mono", Consolas, "Liberation Mono", Menlo, monospace;
    font-size: 0.875em;
    background: var(--color-bg-subtle);
    padding: 2px 6px;
    border-radius: 3px;
  }

  .content :global(pre) {
    background: var(--color-bg-subtle);
    padding: var(--space-md);
    overflow-x: auto;
    margin: 0 0 var(--space-md) 0;
    border-radius: 4px;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(blockquote) {
    margin: 0 0 var(--space-md) 0;
    padding-left: var(--space-md);
    border-left: 2px solid var(--color-accent);
    color: var(--color-text-muted);
    font-style: normal;
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .content :global(a:hover) {
    text-decoration: none;
  }

  .article-footer {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .back-link {
    font-family: var(--font-label);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .back-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
