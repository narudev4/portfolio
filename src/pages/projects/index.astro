---
import { getCollection } from "astro:content";
import FrameLayout from "../../layouts/FrameLayout.astro";

const projects = await getCollection("projects", ({ data }) => {
  return data.draft !== true;
});

const sortedProjects = projects.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('ja-JP', {
    year: 'numeric',
    month: 'short',
  }).format(date);
};
---

<FrameLayout title="Projects">
  <div class="projects-page">
    <header class="page-header">
      <div class="section-header">
        <span class="section-number">04</span>
        <p class="label">Projects</p>
      </div>
      <h1>制作物一覧</h1>
      <p class="description">個人開発で制作したプロジェクトをまとめています。</p>
    </header>

    <div class="project-list">
      {sortedProjects.map((project, index) => (
        <article class="project-item">
          <a href={`/projects/${project.slug}`} class="project-link">
            <div class="project-meta">
              <span class="project-number">{String(index + 1).padStart(2, '0')}</span>
              <time datetime={project.data.date.toISOString()}>
                {formatDate(project.data.date)}
              </time>
            </div>
            <div class="project-content">
              <h2>{project.data.title}</h2>
              <p class="summary">{project.data.summary}</p>
              <ul class="tags">
                {project.data.tags.map((tag) => (
                  <li class="tag">{tag}</li>
                ))}
              </ul>
            </div>
          </a>
        </article>
      ))}
    </div>

    <footer class="page-footer">
      <a href="/#top" class="back-link">← トップページへ戻る</a>
    </footer>
  </div>
</FrameLayout>

<style>
  .projects-page {
    padding: var(--space-xl) var(--page-padding);
    max-width: 600px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .section-header {
    position: relative;
    display: inline-block;
    margin-bottom: var(--space-md);
  }

  .section-number {
    position: absolute;
    top: -1rem;
    right: -2.5rem;
    font-family: var(--font-label);
    font-size: 0.625rem;
    font-weight: 500;
    color: var(--color-border);
    letter-spacing: 0.1em;
  }

  .label {
    font-family: var(--font-label);
    font-size: 0.5625rem;
    font-weight: 500;
    color: var(--color-accent);
    letter-spacing: 0.4em;
    text-transform: uppercase;
  }

  h1 {
    margin-bottom: var(--space-md);
  }

  .description {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.8;
  }

  .project-list {
    margin-bottom: var(--space-xl);
  }

  .project-item {
    border-bottom: 1px solid var(--color-border);
  }

  .project-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .project-link {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: var(--space-md);
    padding: var(--space-lg) 0;
    text-decoration: none;
    align-items: start;
  }

  @media (max-width: 600px) {
    .project-link {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
      padding: var(--space-md) 0;
    }
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  @media (max-width: 600px) {
    .project-meta {
      flex-direction: row;
      align-items: center;
      gap: var(--space-md);
    }
  }

  .project-number {
    font-family: var(--font-label);
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
  }

  time {
    font-family: var(--font-label);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
  }

  .project-content h2 {
    font-size: 1.375rem;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    transition: color 0.2s ease;
  }

  .project-link:hover h2 {
    color: var(--color-accent);
  }

  .project-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
  }

  .summary {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: var(--space-md);
  }

  .tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    font-family: var(--font-label);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
    padding: 4px 10px;
    background: var(--color-bg-subtle);
    border-radius: 2px;
  }

  .page-footer {
    padding-top: var(--space-lg);
    text-align: center;
  }

  .back-link {
    font-family: var(--font-label);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .back-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
